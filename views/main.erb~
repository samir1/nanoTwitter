	<% tweets = Tweet.last(100).order(id: :desc) %>
	<% tweets.each do |t| %>
	<% user = User.find_by(id: t.owner) %>
	<% if user == nil %>
	<% t.destroy %>
	<% else %>
	<%= "@#{user.username}: #{t.text} <br /><br />" %>
	<% end %>
	<% end %>
